#!/bin/bash

set -e -u -o pipefail

pushd "bbl-state/environments/${ENV}"
  eval "$(bbl print-env)"
popd

credhub set \
  --name "/bosh-${ENV}/cf/network-policy-db-credentials" \
  --type user \
  --username "${USERNAME}" \
  --password "${PASSWORD}"

credhub set \
  --name "/bosh-${ENV}/cf/network-policy-db-host" \
  --type value \
  --value "${HOST}"

credhub set \
  --name "/bosh-${ENV}/cf/silk-controller-db-credentials" \
  --type user \
  --username "${USERNAME}" \
  --password "${PASSWORD}"

credhub set \
  --name "/bosh-${ENV}/cf/silk-controller-db-host" \
  --type value \
  --value "${HOST}"

